{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "New Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "writerOpts": {
        "commitGroupsSort": ["feat", "fix"],
        "commitsSort": ["scope", "subject"]
      }
    }
  }
}
